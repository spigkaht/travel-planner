<div class="h-screen flex">
  <div class="relative group flex flex-col justify-center w-10 hover:w-28 transition-all duration-1000 px-2 bg-gray-200 text-2xl text-center">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 mx-auto translate-left-1/2 transition-opacity duration-1000 opacity-0 group-hover:opacity-100">
      <p class="mt-2">trips</p>
      <%= link_to planner_path do %>
        <%= icon "plane-alt", variant: "solid", class: "w-12 h-12 mt-4 hover:text-color-red" %>
      <% end %>
      <%= link_to planner_path do %>
        <%= icon "plane-alt", variant: "solid", class: "w-12 h-12 mt-4 hover:text-color-red" %>
      <% end %>
      <%= link_to "SO", destroy_user_session_path, data: { turbo_method: :delete, confirm: "Sign out really?" } %>
    </div>
    <div class="transition-opacity duration-1000 opacity-100 group-hover:opacity-0">
      <p>G</p>
      <p>L</p>
      <p>O</p>
      <p>B</p>
      <p>A</p>
      <p>L</p>
    </div>
  </div>
  <div class="flex flex-col justify-center w-10 hover:w-28 transition-all duration-1000 bg-gray-100 px-2 text-2xl text-center">
    <p>T</p>
    <p>R</p>
    <p>I</p>
    <p>P</p>
  </div>
  <div class="flex flex-col justify-between w-1/2 mx-4 mt-3 mb-4">
    <div data-controller="list-sort" data-list-sort-url-value="<%= sort_cities_path %>">
      <ul data-list-sort-target="list">
        <% @cities.each do |city| %>
          <li data-id="<%= city.id %>" class="flex justify-between w-100 cursor-grab active:cursor-grabbing my-2">
            <p><%= city.address %></p>
            <%= link_to "x", city_path(city), data: {turbo_method: :delete} %>
          </li>
          <p data-duration></p>
        <% end %>
      </ul>
    </div>
    <%= link_to "All Cities", cities_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"%>
  </div>
  <div style="width: 100%; height: 100%;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_MAP_API_KEY'] %>"
    data-map-is-planner-map-value=true>
  </div>
</div>
