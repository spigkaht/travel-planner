<div class="flex flex-col w-1/4 mt-10 mx-auto text-center border border-red-500">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :tailwind_form) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions flex flex-col items-center">
      <%= f.button :submit, "Log in", class: "bg-gray-50 border border-gray-300 text-gray-900 h-8 text-sm rounded-lg hover:ring-green-500 hover:border-green-500 w-40 p-1.5 my-1" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
